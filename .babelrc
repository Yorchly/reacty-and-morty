{
  "presets": ["react-app"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ".",
        "alias": {
          "~Assets": "./src/app/assets",
          "~Api": "./src/app/api",
          "~Components": "./src/app/components",
          "~i18n": "./src/app/i18n",
          "~Router": "./src/app/router",
          "~Store": "./src/app/store",
          "~Styles": "./src/app/styles",
          "~Screens": "./src/app/screens",
          "~Types": "./src/app/types",
          "~Views": "./src/app/views"
        }
      }
    ]
  ]
}
